        <Model>12000</Model>
        <Operation>Tank</Operation>
        <Units>%</Units>
        <Lambda>x: 1.0/1024*float(x)</Lambda>
        <Params>
            <Param name="height" widget="spinbox" title="Height" description="Height of tank">
                <Min>1000</Min>
                <Max>5000</Max>
                <Interval>100</Interval>
                <Default>2400</Default>
                <Step>100</Step>
                <Units>CMs</Units>
                <Type>Int</Type>
            </Param>
        </Params>
    </Device>
    <Device id='AI001FLOW' type="adc">
        <Manufacturer>China</Manufacturer>
        <Model>Generic</Model>
        <Operation>Flow</Operation>
        <Lambda>x: 1.0/1024*float(x)</Lambda>
        <Units>Lpm</Units>
        <Params>
            <Param name="highflow" widget="slider" title="High Flow" description="High Flow Warning in Litres per Minute">
                <Min>10</Min>
                <Max>1000</Max>
                <Interval>10</Interval>
                <Default>100</Default>
                <Type>Int</Type>
                <Step>10</Step>
                <Units>LPm</Units>
            </Param>
        </Params>
    </Device>
    <Device id='AI001FENCE' type="adc">
        <Manufacturer>Pakton</Manufacturer>
        <Model>PTE0700</Model>
        <Operation>Fence Monitor</Operation>
        <Units>V</Units>
        <Lambda>x: 1.0/1024*float(x)</Lambda>
        <Params>
            <Param name="voltage" widget="spinbox" title="Voltage" description="Ideal Voltage">
                <Min>1000</Min>
                <Max>10000</Max>
                <Interval>100</Interval>
                <Default>7000</Default>
                <Type>Int</Type>
                <Step>100</Step>
                <Units>Volts</Units>
            </Param>
            <Param name="warning" widget="spinbox" title="Low Voltage" description="Low Voltage Warning">
                <Min>0</Min>
                <Max>10000</Max>
                <Interval>100</Interval>
                <Default>1000</Default>
                <Type>Int</Type>
                <Step>100</Step>
                <Units>Volts</Units>
            </Param>
        </Params>
        <Conversion/>
    </Device>
    <Device id='DO001RELAY' type="xdc">
        <Manufacturer/>
        <Model>Generic</Model>
        <Operation>Relay</Operation>
        <Conversion/>
    </Device>
